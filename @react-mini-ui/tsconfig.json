{
  "compilerOptions": {
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": false,
    "importHelpers": true,
    "outDir": "dist",
    "jsx": "react",
    "allowJs": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "noEmitOnError": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": ["**/__tests__/**/*.*"]
}
